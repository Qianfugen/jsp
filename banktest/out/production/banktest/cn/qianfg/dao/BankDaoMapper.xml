<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--
namespace:必须是对应接口的全路径
-->
<mapper namespace="cn.qianfg.dao.BankDao">
    <update id="save" >
        update bank set money=money+5000 where name='zhangsan'
    </update>

    <update id="withdraw" >
        update bank set money=money-5000 where name='lisi'
    </update>
</mapper>